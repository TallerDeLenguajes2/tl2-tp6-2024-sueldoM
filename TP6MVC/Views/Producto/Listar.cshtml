@{
    ViewData["Title"] = "Lista de Producto";
}

@model List<TP6MVC.Models.Producto>

<h2>Lista de Productos</h2>

<table class="table table-light">
    <thead>
        <tr>
            <th hidden>ID</th>
            <th>Nombre</th>
            <th>Precio</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var producto in Model)
        {
            <tr>
                <td hidden>@producto.IdProducto</td>
                <td>@producto.Descripcion1</td>
                <td>@producto.Precio</td>
                <td>
                    <a asp-controller="Producto" asp-action="Modificar" asp-route-id="@producto.IdProducto" class="btn btn-success">Editar</a>
                    <a asp-controller="Producto" asp-action="Eliminar" asp-route-id="@producto.IdProducto" class="btn btn-danger">Eliminar</a>                      
                </td>
            </tr>
        }
    </tbody>
</table>
<body>
    <a class="nav-link text-dark" asp-area="" asp-controller="Producto" asp-action="Crear">Crear Producto</a>
</body>